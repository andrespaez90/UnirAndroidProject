<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="unir.andres.com.proyectofinalandroidi.UI.LoginActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="81dp"
            android:layout_height="match_parent"
            android:id="@+id/login_img_profile"
            android:src="@mipmap/ic_account"/>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            float:fletPadding="10dp"
            android:gravity="top">

            <EditText
                android:id="@+id/login_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Usuario"
                android:gravity="center_vertical|center"
                android:imeOptions="actionNext"/>

        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <ImageView
            android:layout_width="79dp"
            android:layout_height="79dp"
            android:id="@+id/imageView"
            android:src="@mipmap/ic_dots_horizontal" />

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            float:fletPaddingBottom="10dp"
            android:layout_gravity="top">

            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Contrasena"
                android:inputType="textPassword"
                android:gravity="bottom|center" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:textColor="#ff0000"
        android:layout_marginTop="5px"
        android:layout_marginBottom="5px"
        android:id="@+id/login_error"
        android:layout_gravity="center_horizontal"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Login"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/principal_buttom"
        android:textColor="@android:color/white"
        android:id="@+id/login_Login"  />


</LinearLayout>
