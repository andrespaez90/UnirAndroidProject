<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="unir.andres.com.proyectofinalandroidi.UI.RegistroActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="81dp"
            android:layout_height="match_parent"
            android:id="@+id/login_img_profile"
            android:src="@mipmap/ic_account"/>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            float:fletPadding="10dp"
            android:gravity="top">

            <EditText
                android:id="@+id/signin_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Username"
                android:gravity="center_vertical|center" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <ImageView
            android:layout_width="79dp"
            android:layout_height="79dp"
            android:id="@+id/imageView"
            android:src="@mipmap/ic_dots_horizontal" />

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            float:fletPaddingBottom="10dp"
            android:layout_gravity="top">

            <EditText
                android:id="@+id/signin_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Password"
                android:inputType="textPassword"
                android:gravity="bottom|center" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <ImageView
            android:layout_width="79dp"
            android:layout_height="79dp"
            android:src="@mipmap/ic_dots_horizontal" />

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            float:fletPaddingBottom="10dp"
            android:layout_gravity="top">

            <EditText
                android:id="@+id/signin_repassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/rePassword"
                android:inputType="textPassword"
                android:gravity="bottom|center" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/signin_error"
        android:textColor="#ff0000"
        android:layout_gravity="center_horizontal"
        android:gravity="center" />

    <Button
        android:id="@+id/signin_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Resgistro"
        android:background="@color/link_text_material_light"
        android:textColor="@color/background_material_light"
        android:gravity="center" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Atras"
        android:id="@+id/signin_back"
        android:layout_marginTop="10px"
        android:textColor="@color/bright_foreground_inverse_material_light"
        android:background="@color/material_blue_grey_800"/>
</LinearLayout>
